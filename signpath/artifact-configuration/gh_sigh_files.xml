<?xml version="1.0" encoding="utf-8"?>
<artifact-configuration
    xmlns="http://signpath.io/artifact-configuration/v1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://signpath.io/artifact-configuration/v1 https://app.signpath.io/Web/artifact-configuration/v1.xsd"
>
    <parameters>
        <!-- Example: 1.17 -->
        <parameter name="iconvPEVersion" required="true" />
        <!-- Example: 0.22.5a -->
        <parameter name="gettextPEVersion" required="true" />
        <!-- Example: 0.22.5 -->
        <parameter name="gettextPEVersionNumeric" required="true" />
    </parameters>
    <zip-file>
        <directory path="bin">
            <pe-file-set>
                <!-- iconv -->
                <include path="iconv.exe" min-matches="1" max-matches="1" product-name="iconv: character set conversion program" product-version="${iconvPEVersion}" />
                <include path="libiconv-*.dll" min-matches="0" max-matches="1" product-name="libiconv: character set conversion library" product-version="${iconvPEVersion}" />
                <!-- gettext -->
                <include path="cldr-plurals.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="envsubst.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="gettext.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="libasprintf-*.dll" min-matches="0" max-matches="1" product-name="GNU libasprintf: automatic formatted output" product-version="1.0" />
                <!-- missing metadata - see https://savannah.gnu.org/bugs/?66267
                <include path="libcharset-*.dll" min-matches="0" max-matches="1" product-name="" product-version="" />
                -->
                <!-- missing metadata - see https://savannah.gnu.org/bugs/?66267
                <include path="libgettextlib-*.dll" min-matches="0" max-matches="1" product-name="" product-version="" />
                -->
                <include path="libgettextpo-*.dll" min-matches="0" max-matches="1" product-name="GNU libgettextpo: public API for PO files" product-version="${gettextPEVersion}" />
                <!-- missing metadata - see https://savannah.gnu.org/bugs/?66267
                <include path="libgettextsrc-*.dll" min-matches="0" max-matches="1" product-name="" product-version="" />
                -->
                <include path="libintl-*.dll" min-matches="0" max-matches="1" product-name="GNU libintl: accessing NLS message catalogs" product-version="${gettextPEVersionNumeric}" />
                <include path="libtextstyle-*.dll" min-matches="0" max-matches="1" product-name="GNU libtextstyle: Text styling library" product-version="${gettextPEVersionNumeric}" />
                <include path="msgattrib.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgcat.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgcmp.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgcomm.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgconv.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgen.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgexec.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgfilter.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgfmt.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msggrep.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msginit.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgmerge.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msgunfmt.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="msguniq.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="ngettext.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="recode-sr-latin.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <include path="xgettext.exe" min-matches="0" max-matches="1" product-name="GNU gettext utilities" product-version="${gettextPEVersion}" />
                <!--
                MinGW-w64: excuded since we don't build them on our own
                - libatomic-*.dll
                - libgcc_s_seh-*.dll
                - libgcc_s_sjlj-*.dll
                - libgomp-*.dll
                - libquadmath-*.dll
                - libssp-*.dll
                - libstdc++-*.dll
                - libwinpthread-*.dll
                -->
                <for-each>
                    <authenticode-sign />
                </for-each>
            </pe-file-set>
        </directory>
    </zip-file>
</artifact-configuration>